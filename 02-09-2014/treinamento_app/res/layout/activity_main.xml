<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PaddingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.treinamento.app.MainActivity" >

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/btnBotaoImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/string_primeira_imagem"
        android:src="@drawable/ic_launcher"
        android:background="@color/urso_quando_foge"
         />
<Button
        android:id="@+id/btnBotao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/string_primeira_imagem"
        android:drawableLeft="@drawable/ic_launcher"
        android:text="@string/meu_botao"
         />
</LinearLayout>